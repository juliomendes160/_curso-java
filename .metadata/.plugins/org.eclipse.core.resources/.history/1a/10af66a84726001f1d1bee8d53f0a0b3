import java.util.Scanner;

public class conversao {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Informe o 1ª salário \"(exemplo: 1200.00 ou 1200,00)\":");
		String salario1 = scanner.nextLine().replace(",", ".");
		
		System.out.println("Informe o 2ª salário \"(exemplo: 2200.00 ou 2200,00)\":");
		String salario2 = scanner.nextLine().replace(",", ".");;
		
		System.out.println("Informe o 3ª salário \"(exemplo: 3200.00 ou 3200,00)\":");
		String salario3 = scanner.nextLine().replace(",", ".");;
		
		Conversao(salario1, salario2, salario3);
		
		scanner.close();
	}
	
	static double Conversao(String salario, String salario2, String salario3) {
		
		return 10.00;
	}
}
