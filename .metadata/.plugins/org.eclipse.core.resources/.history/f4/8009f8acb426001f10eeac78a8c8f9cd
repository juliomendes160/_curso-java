
public class Data {
	int dia;
	int mes;
	int ano;
	
	Data(int dia, int mes, int ano){
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
	
	String Formatar(int formato) {
		String dataFormatada = "";
		
		switch(formato) {
			case 1: 
				dataFormatada = this.dia +"/"+ this.mes +"/"+ this.ano;
			case 2: 
				dataFormatada = this.ano+"/"+ this.mes +"/"+ this.dia;
		}
		return dataFormatada;
	}
}
